{
    "name": "mab/modx.org",
    "description": "MODX Documentation Website",
    "keywords": ["modx", "modx.org"],
    "homepage": "https://docs.modx.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Hamstra",
            "email": "mark@modmore.com",
            "homepage": "https://www.modmore.com/"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "ext-fileinfo": "*",
        "ext-mbstring": "*",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "slim/twig-view": "^2.3",
        "spatie/yaml-front-matter": "^2.0",
        "league/commonmark": "^2.3",
        "caseyamcl/toc": "^3.0",
        "vlucas/phpdotenv": "^3.3",
        "symfony/console": "^5.2",
        "symfony/process": "^5.2",
        "voku/stop-words": "^2.0"
    },
    "require-dev": {
        "ext-intl": "*"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "MODXDocs\\": "src/"
        }
    },
    "config": {
        "process-timeout" : 0,
        "platform": {
            "php": "7.4.0"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public index.php",
        "test": "phpunit"
    }
}
